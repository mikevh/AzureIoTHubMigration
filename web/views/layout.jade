doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - MyWebApp
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/morestyles.css')
    script(src='/javascripts/modernizr-2.6.2.js')
    script(src='/javascripts/jquery-1.10.2.js')
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/jadescripts.js')
    script(src='/javascripts/respond.js')
    script(src='/javascripts/jquery.cookie.js')
    script(src='/javascripts/admin.js')
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/') MyWebApp
        ul.nav.navbar-nav.navbar-right
            li
              if admin
                a(href='/admin') 
                  span.glyphicon.glyphicon-user
                  |  Admin
            if loggedIn
              li
                a(href='/logout') 
                  span.glyphicon.glyphicon-log-out
                  |  Logout
            else
              li
                a(href='/login') 
                  span.glyphicon.glyphicon-log-in
                  |  Login
    .container.body-content
      block content
      hr
      footer
        p &copy; #{year} - MyWebApp
